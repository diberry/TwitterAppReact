  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "https://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest all",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test", "--runInBand"],
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
